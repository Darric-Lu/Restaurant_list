<div class="container-fluid card mt-2">
  <div class="row justify-content-center">
    {{#each locationList }}
    <a class="btn btn-custom btn-sm m-2" href="/sort/location/{{this}}">{{this}}</a>
    {{/each}}
    <a class="btn btn-outline-warning btn-sm m-2 border-left-3" href="/">home</a>
  </div>
</div>
{{#if dataList}}
<div class="container mt-2">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <h3>{{location}}:</h3>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 ">
        {{#each dataList}}
        <div class="p-1">
          <div class="card">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>
              <div class="row justify-content-between mt-2">
                <div class="col-12 col-md-8">
                  <div class="restaurant-category mb-1">
                    <i class="fas fa-utensils pr-2"></i> {{this.category}}
                  </div>
                </div>
                <div class="col- p-1">
                  <span class="badge badge-pill badge-danger font-weight-normal">
                    {{this.rating}}
                    <i class="fas fa-star fa-xs"></i>
                  </span>
                </div>
              </div>
              <div class="d-flex justify-content-center bg-custom rounded-pill mt-1" data-toggle="collapse"
                data-target="#D{{this._id}}" aria-expanded="false" aria-controls="Example">
                <i class="fas fa-ellipsis-h"></i>
              </div>
              <div class="row justify-content-center mt-2 collapse" id="D{{this._id}}">
                <a class="btn btn-custom btn-sm mr-2" href="/restaurants/{{this._id}}/edit">Edit</a>
                <a class="btn btn-custom btn-sm mr-2" href="/restaurants/{{this._id}}">Detail</a>
                <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST">
                  <button class="btn btn-outline-danger btn-sm mt-lg-0" type="submit">delete</button>
                </form>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
{{/if}}